generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  provider  String
  createdAt DateTime @default(now())

  comments    Comment[]
  collections Collection[]
}

model Comment {
  id         Int      @id @default(autoincrement())
  animeMalId String
  comment    String
  animeTitle String
  createdAt  DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String
}

model Collection {
  id         Int      @id @default(autoincrement())
  animeMalId String
  animeTitle String?
  animeImage String?
  createdAt  DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  @@unique([userId, animeMalId])
}
